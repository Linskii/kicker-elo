rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns this document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Anyone can read user profiles (for leaderboards, match history)
      allow read: if true;

      // Users can only create/update their own profile
      // Elo updates are ONLY allowed via Cloud Functions (admin SDK bypasses rules)
      allow create: if isOwner(userId);
      allow update: if isOwner(userId)
        && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['elo', 'matchesPlayed', 'wins', 'losses']);
    }

    // Relationships collection (friendships)
    match /relationships/{relationshipId} {
      // Users can read relationships they're part of
      allow read: if isAuthenticated()
        && request.auth.uid in resource.data.users;

      // Users can create a relationship if they're the sender
      allow create: if isAuthenticated()
        && request.auth.uid == request.resource.data.senderId
        && request.auth.uid in request.resource.data.users;

      // Users can update relationships they're part of (accept, update trust)
      allow update: if isAuthenticated()
        && request.auth.uid in resource.data.users;

      // Either user can delete the relationship
      allow delete: if isAuthenticated()
        && request.auth.uid in resource.data.users;
    }

    // Matches collection
    match /matches/{matchId} {
      // Anyone can read matches (public match history)
      allow read: if true;

      // Authenticated users can create matches
      allow create: if isAuthenticated()
        && request.auth.uid in request.resource.data.participants;

      // Participants can update matches (add goals, change status)
      // But cannot modify eloChanges (only Cloud Functions can)
      allow update: if isAuthenticated()
        && request.auth.uid in resource.data.participants
        && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['eloChanges']);

      // Only allow delete if match is still in lobby status
      allow delete: if isAuthenticated()
        && request.auth.uid in resource.data.participants
        && resource.data.status == 'lobby';
    }
  }
}
