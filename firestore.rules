rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns this document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper to validate Elo change is within reasonable bounds (-50 to +50)
    function isValidEloChange(oldElo, newElo) {
      let diff = newElo - oldElo;
      return diff >= -50 && diff <= 50;
    }

    // Users collection
    match /users/{userId} {
      // Anyone can read user profiles (for leaderboards, match history)
      allow read: if true;

      // Users can create their own profile
      allow create: if isOwner(userId)
        && request.resource.data.elo == 1000
        && request.resource.data.matchesPlayed == 0
        && request.resource.data.wins == 0
        && request.resource.data.losses == 0;

      // Users can update their own profile (non-stat fields only)
      allow update: if isOwner(userId)
        && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['elo', 'matchesPlayed', 'wins', 'losses']);

      // Allow stat updates from any match participant when a match completes
      // This allows the match creator to update all participants' stats
      allow update: if isAuthenticated()
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['elo', 'matchesPlayed', 'wins', 'losses'])
        && isValidEloChange(resource.data.elo, request.resource.data.elo)
        && request.resource.data.matchesPlayed == resource.data.matchesPlayed + 1
        && (
          (request.resource.data.wins == resource.data.wins + 1 && request.resource.data.losses == resource.data.losses)
          ||
          (request.resource.data.losses == resource.data.losses + 1 && request.resource.data.wins == resource.data.wins)
        );
    }

    // Relationships collection (friendships)
    match /relationships/{relationshipId} {
      // Users can read relationships they're part of
      allow read: if isAuthenticated()
        && request.auth.uid in resource.data.users;

      // Users can create a relationship if they're the sender
      allow create: if isAuthenticated()
        && request.auth.uid == request.resource.data.senderId
        && request.auth.uid in request.resource.data.users;

      // Users can update relationships they're part of (accept, update trust)
      allow update: if isAuthenticated()
        && request.auth.uid in resource.data.users;

      // Either user can delete the relationship
      allow delete: if isAuthenticated()
        && request.auth.uid in resource.data.users;
    }

    // Invitations collection
    match /invitations/{invitationId} {
      // Invitees can read their pending invitations
      allow read: if isAuthenticated()
        && request.auth.uid == resource.data.inviteeUid;

      // Authenticated users can create invitations where they are the inviter
      allow create: if isAuthenticated()
        && request.auth.uid == request.resource.data.inviterUid;

      // Invitees can update (accept/decline) their invitations
      allow update: if isAuthenticated()
        && request.auth.uid == resource.data.inviteeUid;
    }

    // Matches collection
    match /matches/{matchId} {
      // Anyone can read matches (public match history)
      allow read: if true;

      // Authenticated users can create matches
      allow create: if isAuthenticated()
        && request.auth.uid in request.resource.data.participants;

      // Participants can update matches (add goals, change status, set eloChanges)
      // Pending invitees can also update (to accept invitation and join)
      allow update: if isAuthenticated()
        && (
          request.auth.uid in resource.data.participants
          || request.auth.uid in resource.data.pendingInvitations
        );

      // Only allow delete if match is still in lobby status
      allow delete: if isAuthenticated()
        && request.auth.uid in resource.data.participants
        && resource.data.status == 'lobby';
    }
  }
}
